.container {
  position: fixed;
  box-sizing: border-box;
  background-color: white;
  width: 750rpx;
  height: 88rpx;
  padding: 0rpx 20rpx;
  white-space:nowrap; 
  border-bottom: 1rpx solid rgba(37, 36, 36, 0.205);
  top: 0;
	z-index: 3;
}

.listContainer {
  display: flex;
  flex-direction: column;
  align-content: center;
  margin-top: 92rpx;
}

/* 正常状态下的颜色必须在前面 */
.type {
    font-size: 28rpx;
    color: #999;
    margin: 0 20rpx;
    width: min-content;
    display: inline-block;
    align-items: center;
    margin-top: 20rpx;
}

.active {
    color:#3cc1fc;
    border-bottom: 8rpx solid  #3cc1fc;
    padding-bottom: 22rpx;
}