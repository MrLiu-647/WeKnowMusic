.container { 
  display: flex;
  flex-direction: column;
  background: white;
}

.title {
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #333;

  /*定义为自适应布局*/
  display: -webkit-box;
  word-break: break-all;
   /*超出文字用省略号代替*/
  text-overflow: ellipsis; 
  /*竖直方向的超出和隐藏*/
  -webkit-box-orient: vertical;
  /*设定行数为3*/
  -webkit-line-clamp: 3;
  /*多出部分隐藏*/
  overflow: hidden;
}

.imageContainer {
  display: flex;
  flex-direction: row;
  padding-left: 30rpx;
  align-items: left;
  /* justify-content: center;水平，垂直居中 */
}
.titleImage {
  padding-left: 30rpx;
  width: 200rpx;
  height: 200rpx;
}
.secondTitleImage {
  padding-left: 30rpx;
  width: 200rpx;
  height: 200rpx;
}

.date {
  font-size: 25rpx;
  color: #666;
  text-align: right;
  padding-right:20rpx;
}

