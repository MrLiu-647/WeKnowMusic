.container { 
  display: flex;
  flex-direction: column;
  background: white;
}

.title {
  padding-top: 30rpx;
  padding-left: 35rpx;
  font-size: 35rpx;
  color: rgb(0, 0, 0);
}

.imageAndLyric {
  display: flex;
  flex-direction: row;
  padding-left: 35rpx;
  align-items: left;
  /* justify-content: center;水平，垂直居中 */
}
.titleImage {
  padding-left: 30rpx;
  padding-top: 15rpx;
  width: 250rpx;
  height: 250rpx;
}
.lyric {
  padding-left: 40rpx;
  padding-top: 50rpx;
  font-size: 28rpx;
  color: #333;

  /*定义为自适应布局*/
  display: -webkit-box;
  word-break: break-all;
   /*超出文字用省略号代替*/
  text-overflow: ellipsis; 
  /*竖直方向的超出和隐藏*/
  -webkit-box-orient: vertical;
  /*设定行数为4*/
  -webkit-line-clamp: 4;
  /*多出部分隐藏*/
  overflow: hidden;
}

.date {
  font-size: 25rpx;
  color: #666;
  text-align: right;
  padding-right:20rpx;
  padding-bottom:10rpx;
}

.line{
position: flex;
background:#F1F1F1;
height: 2rpx;
width: 720rpx;
margin-left: 30rpx;
margin-top: 20rpx
}

.content{
  display: flex;
  flex-direction: column;
}